{{#if alumnos}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Nombre o nombres</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Fecha de Nacimiento</th>
            <th>Genero del alumno</th>
            <th>Número de celular</th>
            <th>Dirección del alumno</th>
            <th>Acciones</th>
    </thead>
    <body>
        {{#each alumnos}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{paterno}}</td>
            <td>{{materno}}</td>
            <td>{{fechaNacimiento}}</td>
            <td>{{sexo}}</td>
            <td>{{celular}}</td>
            <td>{{direccion}}</td>
            <td>
                {{#if opcion}}
                    <a href="/statusAlumnos/{{_id}}" class="btn btn-warning">No inscrito</a>
                {{else}}
                    <a href="/statusAlumnos/{{_id}}" class="btn btn-success">Si inscrito</a>
                {{/if}}

                <a href="/updateAlumnos/{{_id}}" class="btn btn-info">Actualizar</a>
                <a href="/deleteAlumnos/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </body>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No hay Alumnos registrados</h1>
        <img src="/icons/file.png" class="w-75">
    </div>
</div>
{{/if}}