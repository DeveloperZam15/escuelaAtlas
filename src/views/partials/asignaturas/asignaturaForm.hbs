<div class="car card-body p-4 rounded-0 bg-dark text-white">
    <h4>Agregar Asignatura</h4>
    <form action="/asignaturas/agregar" method="POST">
    <div>
        <label for="nombre">Escribe el nombre de la asignatura</label>
        <input type="text" name="nombre" placeholder="Name" id="nombre"
        class="form-control bg-dark text-white"/>
    </div>
    <div>
        <label for="creditos">Escribe los creditos asignados</label>
        <input type="number" name="creditos" placeholder="Credits" id="creditos"
        class="form-control bg-dark text-white"/>
    </div>
    <div>
        <label for="horas">Escribe las horas asignadas</label>
        <input type="number" name="horas" placeholder="Hours" id="horas"
        class="form-control bg-dark text-white"/>
    </div>
    <br/>
    <button class="btn btn-success btn-sm mt-2">Agregar</button>        
    <br/>
    <br/>
</form>
</div>

